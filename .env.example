# Hotel Price Updater - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# CASCADE PIPELINE API KEYS
# =============================================================================

# SerpApi (Google Hotels)
# Sign up at: https://serpapi.com/users/sign_up
# Free tier: 250 searches/month
SERPAPI_KEY=your_serpapi_key_here

# Apify (Booking.com Scraper)
# Sign up at: https://console.apify.com/sign-up
# Free tier: $5/month in credits (~1,700 results)
APIFY_TOKEN=your_apify_token_here

# Amadeus (GDS Hotel Search)
# Sign up at: https://developers.amadeus.com/register
# Free tier: 500 calls/month
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here

# =============================================================================
# CASCADE SETTINGS (optional)
# =============================================================================

# Enable cascade pipeline (default: true)
CASCADE_ENABLED=true

# Cache TTL in hours (default: 24)
CACHE_TTL_HOURS=24

# Cache file location (default: cache/prices_cache.json)
CACHE_FILE=cache/prices_cache.json

# =============================================================================
# XOTELO API SETTINGS (optional)
# =============================================================================

# API URL (default: https://data.xotelo.com/api)
# XOTELO_API_URL=https://data.xotelo.com/api

# Request timeout in seconds (default: 30)
# API_TIMEOUT=30

# Delay between requests in seconds (default: 0.5)
# REQUEST_DELAY=0.5

# Maximum retries per request (default: 2)
# MAX_RETRIES=2

# =============================================================================
# SEARCH DEFAULTS (optional)
# =============================================================================

# Days ahead for check-in date (default: 30)
# DEFAULT_DAYS_AHEAD=30

# Number of nights (default: 1)
# DEFAULT_NIGHTS=1

# Number of rooms (default: 1)
# DEFAULT_ROOMS=1

# Adults per room (default: 2)
# DEFAULT_ADULTS=2
